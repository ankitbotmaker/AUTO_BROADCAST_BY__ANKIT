{
  "name": "Advanced Telegram Broadcast Bot",
  "description": "A powerful FREE Telegram bot for broadcasting messages to multiple channels with advanced automation features - All features included!",
  "repository": "https://github.com/ankitbotmaker/bbbot",
  "logo": "https://i.ibb.co/GQrGd0MV/a101f4b2bfa4.jpg",
  "keywords": ["telegram", "bot", "broadcast", "automation", "channels", "free", "unlimited"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "MONGO_URL": {
      "description": "Your MongoDB connection string",
      "required": true
    },
    "ADMIN_IDS": {
      "description": "Comma-separated list of admin user IDs",
      "required": true
    },
    "OWNER_ID": {
      "description": "Bot owner user ID for premium activation",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID (optional)",
      "required": false
    },
    "API_HASH": {
      "description": "Telegram API Hash (optional)",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
